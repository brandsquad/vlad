// colors
$accentColor = #8E7CE0
$textColor = #CCC
$borderColor = #111
$codeBgColor = #555
$arrowBgColor = #333

// layout
$contentWidth = 720px

html, body {
    background: radial-gradient(#252528, #0b0b0f);
    background-attachment: fixed;
}

body {
    min-height: 100vh;
    font-size: 125%;
    overflow-y: scroll;
    scrollbar-color: dark;
}

.nav-item > a:not(.external):hover,
.theme-default-content:not(.custom) a:hover {
    text-decoration: none;
    border-bottom: 0;
}

body h2 {
    font-size: 1.75rem;
    border-bottom-color: #8E7CE0;
}

body h3 {
    font-size: 1.5rem;
    font-weight: normal;
}

.navbar {
    border-bottom: 0;
}

.navbar .links,
.navbar {
    background-color: transparent;
}

.navbar .links {
    font-size: 1.25rem;
}

.page table {
    width: 100%;
}

.page table th:first-child {
    min-width: 200px;
}
.sidebar {
    background: #000;
}

@media screen and (max-width: 520px) {
    .page table {
        overflow: unset;
    }
    .page table td {
        display: block;
    }

    .page table thead {
        display: none;
    }
}
